<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="custom_account_amount_view_form" model="ir.ui.view">
        <field name="name">custom.account.amount.view.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='amount']" position="replace"/>
            <xpath expr="//div[@name='amount_div']" position="replace"/>
            <xpath expr="//field[@name='communication']" position="after">
                <label for="amount" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
                <div name="amount_div" class="o_row" attrs="{'invisible': ['|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}">
                    <field name="amount"/>
                    <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                </div>
            </xpath>
        </field>
    </record>
  </data>
</odoo>