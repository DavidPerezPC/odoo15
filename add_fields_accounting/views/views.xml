<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="add_fields_accounting" model="ir.ui.view">
            <field name="name">add.fields.accounting</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree_grouped_sales_purchases"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_territory" optional="show"/>
                    <field name="x_sector" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="add_fields_accounting_2" model="ir.ui.view">
            <field name="name">add.fields.accounting.2</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree_grouped_bank_cash"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_territory" optional="show"/>
                    <field name="x_sector" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="add_fields_accounting_3" model="ir.ui.view">
            <field name="name">add.fields.accounting.3</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree_grouped_misc"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_territory" optional="show"/>
                    <field name="x_sector" optional="show"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>