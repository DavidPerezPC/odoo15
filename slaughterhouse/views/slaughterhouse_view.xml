<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="slaughterhouse_configuration_tree">
            <field name="name">slaughterhouse list</field>
            <field name="model">slaughterhouse.slaughterhouse</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_configuration_form">
            <field name="name">slaughterhouse form</field>
            <field name="model">slaughterhouse.slaughterhouse</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="slaughterhouse_configuration_kanban">
            <field name="name">slaughterhouse Kanban</field>
            <field name="model">slaughterhouse.slaughterhouse</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_configuration_kanban_search">
            <field name="name">slaughterhouse Search</field>
            <field name="model">slaughterhouse.slaughterhouse</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="slaughterhouse.action_window">
            <field name="name">Slaughter Table</field>
            <field name="res_model">slaughterhouse.slaughterhouse</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="slaughterhouse_configuration_kanban_search"/>
        </record>

        <menuitem name="Slaughterhouse" action="slaughterhouse.action_window" sequence="7"
                  web_icon="slaughterhouse,static/description/icon.png" id="slaughterhouse.menu_root"/>
        <menuitem id="slaughterhouse" name="Slaughterhouse" parent="slaughterhouse.menu_root"
                  sequence="2"/>
        <menuitem id="slaughterhouse_configurations" name="Configurations" parent="slaughterhouse.menu_root"
                  sequence="3"/>
        <menuitem id="slaughterhouse_entrance_booth" name="Cattle" parent="slaughterhouse_configurations"
                  sequence="1"/>
        <menuitem id="slaughterhouse_slaughter" name="Slaughter" parent="slaughterhouse_configurations" sequence="2"/>
    </data>
</odoo>