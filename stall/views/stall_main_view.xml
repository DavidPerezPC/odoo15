<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="stall_configuration_tree">
            <field name="name">stall list</field>
            <field name="model">stall.stall</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="stall_configuration_form">
            <field name="name">stall form</field>
            <field name="model">stall.stall</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="stall_configuration_kanban">
            <field name="name">stall Kanban</field>
            <field name="model">stall.stall</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="stall_configuration_kanban_search">
            <field name="name">stall Search</field>
            <field name="model">stall.stall</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="stall.action_window">
            <field name="name">stall Table</field>
            <field name="res_model">stall.stall</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="stall_configuration_kanban_search"/>
        </record>

        <menuitem name="Stall" action="stall.action_window" sequence="7"
                  web_icon="stall,static/description/icon.png" id="stall.menu_root"/>
        <menuitem id="stall_stall" name="Stall" parent="stall.menu_root"
                  sequence="1"/>
        <menuitem id="stall_configuration" name="Configuration"
                  parent="stall.menu_root" sequence="2"/>
        <menuitem id="stall_specie_catalog" action="slaughterhouse.slaughter_specie_catalog_action" name="Species"
                  parent="stall_configuration" sequence="1"/>
        <menuitem id="stall_source_sites" action="slaughterhouse.slaughter_source_sites_action" name="Origin sites"
                  parent="stall_configuration" sequence="2"/>
        <menuitem id="stall_passage_concepts" action="slaughterhouse.slaughter_passage_concepts_action"
                  name="Passage concept"
                  parent="stall_configuration" sequence="3"/>
        <menuitem id="stall_cattle_type" action="slaughterhouse.slaughter_cattle_type_action" name="Cattle type catalog"
                  parent="stall_configuration" sequence="4"/>
        <menuitem id="stall_source_sites_introducer" action="slaughterhouse.slaughter_source_sites_introducer_action"
                  name="Origin sites/introducer"
                  parent="stall_configuration" sequence="5"/>
        <menuitem id="stall_introducer_type_cattle" action="slaughterhouse.relationship_introducer_type_cattle_action"
                  name="Introducer/type of cattle relationship"
                  parent="stall_configuration" sequence="6"/>


    </data>
</odoo>