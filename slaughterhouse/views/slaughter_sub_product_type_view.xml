<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="slaughter_sub_product_type_tree" model="ir.ui.view" >
            <field name="name">Slaughter Sub Product Type Tree</field>
            <field name="model">slaughter.sub.product.type</field>
            <field name="arch" type="xml">
                <tree string="Sub product types" sample="1" editable="bottom">
                    <field name="sequence_line" widget="handle"/>
                    <field name="code" required="1"/>
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="slaughter_sub_product_type_form" model="ir.ui.view">
            <field name="name">Slaughter Sub Product Type Form</field>
            <field name="model">slaughter.sub.product.type</field>
            <field name="arch" type="xml">
                <form string="Sub product type">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="slaughter_sub_product_type_action" model="ir.actions.act_window">
            <field name="name">Sub product type action</field>
            <field name="res_model">slaughter.sub.product.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sub product type
                </p>
                <p>
                    You must define a type for everything sub products.
                </p>
            </field>
        </record>

        <menuitem id="slaughter_sub_product_type" action="slaughter_sub_product_type_action" name="Sub product type"
                  parent="slaughterhouse.slaughterhouse_slaughter" sequence="7"/>
    </data>
</odoo>