<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
 <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
    <xpath expr="//table[hasclass('client-list')]" position="replace">
        <table class="client-list">
                                        <thead>
                                            <tr>
                                                <th>Referencia</th>
                                              <!--  <th>Customer Rank</th>
                                                <th>Warehouse</th>-->
                                                <th>Name</th>
                                                <th t-if="!env.isMobile">Address</th>
                                                <th t-if="!env.isMobile">Phone</th>
                                                <th t-if="env.isMobile">ZIP</th>
                                                <th>Email</th>
                                            </tr>
                                        </thead>
                                        <tbody class="client-list-contents">
                                                 <t t-foreach="clients" t-as="partner"
                                               t-key="(partner.id)">

                                          <!--  <t t-foreach="clients.filter(e => (e.company_id.id == env.pos.session.company_id.id ||  e.parent_id.id == env.pos.session.company_id.id) and e.customer_rank>0)" t-as="partner"
                                               t-key="(partner.id)">-->

                                                     <ClientLine partner="partner"
                                                            selectedClient="state.selectedClient"
                                                            detailIsShown="state.detailIsShown"
                                                            t-on-click-client="clickClient" />
                                                    </t>

                                        </tbody>
                                    </table>

    </xpath>
    </t>
</templates>
