<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="is_refund" model="ir.ui.view">
            <field name="name">is.refund</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="x_is_refund" optional="hide"/>
                </xpath>
            </field>
        </record>

         <record id="string_refund" model="ir.ui.view">
            <field name="name">string.refund</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="x_is_refund" invisible="1"/>
                    <field name="x_refund" attrs="{'invisible': ['|',('x_is_refund', '=', True),('x_refund','=', False)]}"/>
                </xpath>
            </field>
        </record>



        <record id="pos_refund" model="ir.ui.view">
            <field name="name">pos.refund</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_count_refund" type="object" class="oe_stat_button"
                            icon="fa-undo" attrs="{'invisible':[('x_count_refund_session', '=', 0)]}">
                        <field name="x_count_refund_session" widget="statinfo"/>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>