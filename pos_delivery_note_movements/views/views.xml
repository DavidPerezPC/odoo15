<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="move_albaran" model="ir.ui.view">
        <field name="name">move.albaran</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">

             <xpath expr="//div[12]" position="after">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="x_restricted_albaran"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Movimientos de albaran" for="x_restricted_albaran"/>
                                <div class="text-muted">
                                    <p><strong>Nota: </strong>No podra cerrar sesi√≥n de PoS si hay movimientos de albaran pendientes de cerrar.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

        </field>
    </record>
  </data>
</odoo>