<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="slaughter_source_sites_introducer_tree">
            <field name="name">Slaughter source sites introducer tree</field>
            <field name="model">slaughter.source.sites.introducer</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="origin_site_id" optional="show"/>
                    <field name="receive_source_reference" optional="show"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughter_source_sites_introducer_form">
            <field name="name">Slaughter source sites introducer form</field>
            <field name="model">slaughter.source.sites.introducer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group style="float:left;">
                                <field name="partner_id" attrs="{'required': 1 }" options="{'no_create':True}" domain="[('category_id.name', '=', 'Introductor')]"/>
                                <field name="origin_site_id" attrs="{'required': 1 }" options="{'no_create':True}"/>
                            </group>
                            <group style="float:right;">
                                <field name="receive_source_reference"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughter_source_sites_introducer_kanban">
            <field name="name">Slaughter source sites introducer Kanban</field>
            <field name="model">slaughter.source.sites.introducer</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="partner_id"/>
                                                <field name="active" invisible="1"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span>
                                                <strong>Origin site:&#160;</strong>
                                                <field name="origin_site_id"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughter_source_sites_introducer_search">
            <field name="name">Slaughter source sites introducer Search</field>
            <field name="model">slaughter.source.sites.introducer</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="slaughter_source_sites_introducer_action">
            <field name="name">Slaughter source sites introducer</field>
            <field name="res_model">slaughter.source.sites.introducer</field>
            <field name="view_mode">tree,form,search,kanban</field>
        </record>

        <menuitem id="slaughter_source_sites_introducer" action="slaughter_source_sites_introducer_action"
                  name="Origin sites/introducer"
                  parent="slaughterhouse.slaughterhouse_entrance_booth" sequence="5"/>
    </data>
</odoo>