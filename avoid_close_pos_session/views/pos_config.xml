<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pos_config_restricted_closure_view" model="ir.ui.view">
            <field name="name">pos.config.restriced.closure.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[11]" position="after">
                    <h2>Cierre restringido</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="x_restricted_closure"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Cierre restringido de caja" for="x_restricted_closure"/>
                                <div class="text-muted">
                                    No podra ser cerrada una caja si hay pedidos pendientes de facturar
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>