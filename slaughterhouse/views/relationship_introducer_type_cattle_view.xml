<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="relationship_introducer_type_cattle_tree">
            <field name="name">Relationship introducer type cattle</field>
            <field name="model">relationship.introducer.type.cattle</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="specie_id" optional="show"/>
                    <field name="cattle_type" optional="show"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="relationship_introducer_type_cattle_form">
            <field name="name">Relationship introducer type cattle form</field>
            <field name="model">relationship.introducer.type.cattle</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="partner_id" attrs="{'required': 1 }"
                                   domain="[('category_id.name', '=', 'Introductor')]"
                                   options="{'no_create':True}"
                                   placeholder="Introducer's name and number"/>
                        </group>
                        <group>
                            <group style="float:left;">
                                <field name="specie_id" attrs="{'required': 1 }" options="{'no_create':True}"/>
                                <field name="cattle_type" attrs="{'required': 1 }" options="{'no_create':True}"/>
                            </group>
                            <group style="float:right;">
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="relationship_introducer_type_cattle_kanban">
            <field name="name">Relationship introducer type cattle kanban</field>
            <field name="model">relationship.introducer.type.cattle</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="partner_id"/>
                                                <field name="active" invisible="1"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span>
                                                <strong>Specie:&#160;</strong>
                                                <field name="specie_id"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Cattle type:&#160;</strong>
                                                <field name="cattle_type"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="relationship_introducer_type_cattle_search">
            <field name="name">Relationship introducer type cattle search</field>
            <field name="model">relationship.introducer.type.cattle</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="relationship_introducer_type_cattle_action">
            <field name="name">Relationship introducer type cattle</field>
            <field name="res_model">relationship.introducer.type.cattle</field>
            <field name="view_mode">tree,form,search,kanban</field>
        </record>

        <menuitem id="relationship_introducer_type_cattle" action="relationship_introducer_type_cattle_action" name="Introducer/type of cattle relationship"
                  parent="slaughterhouse.slaughterhouse_entrance_booth" sequence="7"/>
    </data>
</odoo>