<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="date_reception" model="ir.ui.view">
        <field name="name">date.reception</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='origin']" position="after">
                <field name="x_fecha_recepcion" widget="datetime" attrs="{'invisible':[('date_done','!=',False)]}"/>
            </xpath>

        </field>
    </record>
  </data>
</odoo>
