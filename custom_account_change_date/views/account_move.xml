<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="account_move_wizard_date" model="ir.ui.view">
        <field name="name">account.move.wizard.date</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
              <button name="open_wizard_account_date" string="Cambiar fecha"
                            attrs="{'invisible': [('edi_state','!=','to_send'),('state','in',('draft','cancel','posted'))]}"
                            groups="base.group_system" type="object" class="btn btn-secondary"/>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="l10n_mx_edi_post_time" groups="base.group_system"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
