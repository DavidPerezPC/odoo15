<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_link_to_invoice_wizard" model="ir.ui.view">
            <field name="name">sale.link.to.invoice.wizard</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_draft']" position="after">
                    <button name="link_sale_to_invoice" string="Enlazar factura"
                            attrs="{'invisible': [('state','!=','sale')]}"
                            groups="base.group_system" type="object" class="btn btn-secondary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>