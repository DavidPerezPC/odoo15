<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="proceso_recibe_xml_form" model="ir.ui.view">
        <field name="name">proceso.recibe.xml.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_sheet']" position="after">
                <button name="search_xml" string="Buscar XML" type="object" class="btn-primary"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="x_partner_id" domain="[('is_company','=', True)]" options="{'no_create_edit': True, 'no_create':True}"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>