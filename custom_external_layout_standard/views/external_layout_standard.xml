<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_sale_order_inherit" inherit_id="web.external_layout_standard">

            <xpath expr="//div[1]/div[1]/div" position="replace">
                <div class="col-3 mb4">

                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                         style="max-height: 60px;"
                         alt="Logo"/>
                </div>
            </xpath>

            <xpath expr="//div[@name='company_address']" position="replace">
                <div class="col-6">
                    <span t-field="company.name"/>
                </div>
            </xpath>

            <xpath expr="//div[2]/div[@class='pt-5']" position="replace">
                <br/>
            </xpath>

            <xpath expr="//div[1]/div[3]" position="after">
                <div class="row">
                    <div class="col-6" style="font-size:16px;">
                        <span t-esc="str(company.street_name) + ' #' + str(company.street_number) + '. Col. ' + str(company.l10n_mx_edi_colony)"/>
                        <br/>
                        <span t-esc="str(company.zip) + ' ' + str(company.city) + ', ' + str(company.state_id.code)"/>
                        <br/>
                        <span t-esc="str(company.country_id.name)"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
