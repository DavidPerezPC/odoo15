<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="slaughterhouse_channels_classification_tree">
            <field name="name">slaughterhouse list</field>
            <field name="model">channels.classification</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="classification_type" optional="show"/>
                    <field name="specie_id" optional="show"/>
                    <field name="cattle_type" optional="show"/>
                    <field name="quality" optional="show"/>
                    <field name="rank" optional="show"/>
                    <field name="sort_code" optional="hide"/>
                    <field name="description_sort_code" optional="hide"/>
                    <field name="product_code_channel" optional="hide"/>
                    <field name="sending_files" optional="hide"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_channels_classification_form">
            <field name="name">slaughterhouse form</field>
            <field name="model">channels.classification</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="partner_id" attrs="{'required': 1 }"
                                   domain="[('category_id.name', '=', 'Introductor')]"
                                   options="{'no_create':True}"
                                   placeholder="Introducer's name and number"/>
                        </group>
                        <group>
                            <group style="float:left;">
                                <field name="classification_type" attrs="{'required': 1 }"/>
                                <field name="specie_id" attrs="{'required': 1 }" options="{'no_create':True}"/>
                                <field name="cattle_type" attrs="{'required': 1 }" options="{'no_create':True}"/>
                                <field name="quality" attrs="{'required': 1 }"/>
                            </group>
                            <group style="float:right;">
                                <field name="sort_code" attrs="{'required': 1 }"/>
                                <field name="description_sort_code" attrs="{'required': 1 }"/>
                                <field name="product_code_channel"/>
                                <field name="sending_files"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                        <group style="float:left; width: 50%;" string="Rank">
                            <table style="width:65%">
                                <tbody>
                                    <tr>
                                        <th width="20%">
                                            <span>
                                                <strong>Starting rank</strong>
                                            </span>
                                        </th>
                                        <th width="15%%">
                                            <field name="starting_range" attrs="{'required': 1 }"/>
                                        </th>
                                        <th width="15%%">
                                            <span>
                                                <strong>Final rank</strong>
                                            </span>
                                        </th>
                                        <th width="15%%">
                                            <field name="final_rank" attrs="{'required': 1 }"/>
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_channels_classification_kanban">
            <field name="name">Channels Classification Kanban</field>
            <field name="model">channels.classification</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="partner_id"/>
                                                <field name="active" invisible="1"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span>
                                                <strong>Classification type:&#160;</strong>
                                                <field name="classification_type"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Specie:&#160;</strong>
                                                <field name="specie_id"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Description sort code:&#160;</strong>
                                                <field name="description_sort_code"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_channels_classification_kanban_search">
            <field name="name">slaughterhouse Search</field>
            <field name="model">channels.classification</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="partner_id"/>
                    <field name="classification_type"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="slaughterhouse_channels_classification_action">
            <field name="name">Channels Classification</field>
            <field name="res_model">channels.classification</field>
            <field name="view_mode">tree,form,search,kanban</field>
        </record>

        <menuitem id="slaughterhouse_chanels" name="Channel classification"
                  parent="slaughterhouse.slaughterhouse_slaughter"
                  action="slaughterhouse_channels_classification_action" sequence="3"/>
    </data>
</odoo>