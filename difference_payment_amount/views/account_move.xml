<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_tree_custom_amounts" model="ir.ui.view">
            <field name="name">account.move.tree.custom.amounts</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total_signed']" position="after">
                    <field name="x_amount_paid_value" optional="hide"
                           attrs="{'invisible': [('move_type', '!=','out_invoice')]}"/>
                    <field name="x_amount_credit_note_value" optional="hide"
                           attrs="{'invisible': [('move_type', '!=','out_invoice')]}"/>
                </xpath>
            </field>
        </record>
        <record id="account_move_form_custom_amounts" model="ir.ui.view">
            <field name="name">account.move.form.custom.amounts</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="x_amount_paid" invisible="1"/>
                    <field name="x_amount_credit_note" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>