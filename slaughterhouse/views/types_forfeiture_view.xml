<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="slaughterhouse_types_forfeiture_tree">
            <field name="name">Types Forfeiture</field>
            <field name="model">types.forfeiture</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="reference"/>
                    <field name="description" optional="show"/>
                    <field name="type" optional="show"/>
                    <field name="location_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_types_forfeiture_form">
            <field name="name">Types forfeiture form</field>
            <field name="model">types.forfeiture</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="description" attrs="{'required': 1 }"/>
                        </group>
                        <group>
                            <group style="float:left;">
                                <field name="reference" attrs="{'required': 1 }"/>
                                <field name="type" attrs="{'required': 1 }"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group style="float:right;">
                                <field name="location_id" attrs="{'required': 1 }" options="{'no_create':True}"
                                       domain="[('is_loss_of_inventories', '=', True)]"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_types_forfeiture_kanban">
            <field name="name">Types forfeiture Kanban</field>
            <field name="model">types.forfeiture</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="description"/>
                                                <field name="active" invisible="1"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span>
                                                <strong>Reference:&#160;</strong>
                                                <field name="reference"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Type:&#160;</strong>
                                                <field name="type"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Location:&#160;</strong>
                                                <field name="location_id"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_types_forfeiture_search">
            <field name="name">Types forfeiture Search</field>
            <field name="model">types.forfeiture</field>
            <field name="arch" type="xml">
                <search string="Records forfeiture">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="reference"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="slaughter_types_forfeiture_action">
            <field name="name">Types Forfeiture window</field>
            <field name="res_model">types.forfeiture</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- menu categories -->
        <menuitem id="slaughter_types_forfetire" action="slaughter_types_forfeiture_action" name="Types Forfeiture"
                  parent="slaughterhouse.slaughterhouse_slaughter" sequence="4"/>
    </data>
</odoo>