<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="slaughter_line_tree" model="ir.ui.view">
            <field name="name">Slaughter line tree</field>
            <field name="model">slaughter.line</field>
            <field name="arch" type="xml">
                <tree string="Slaughter Lines" sample="1">
                    <field name="sequence_line" widget="handle"/>
                    <field name="full_name" string="Line"/>
                    <field name="standing_weight"/>
                    <field name="channel_weight"/>
                </tree>
            </field>
        </record>

        <record id="slaughter_line_form" model="ir.ui.view">
            <field name="name">Slaughter line form</field>
            <field name="model">slaughter.line</field>
            <field name="arch" type="xml">
                <form string="Slaughter Line">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <h1><field name="name" required="1" placeholder="Description of the line"/></h1>
                        <group>
                            <group>
                                <field name="code" required="1" placeholder="Code of the line"/>
                                <label for="standing_weight" string="Standing weight"/>
                                <div class="o_row">
                                    <field name="standing_weight" placeholder="Weight in kg"/>
                                    <span> kg</span>
                                </div>
                                <label for="channel_weight" string="Channel weight"/>
                                <div class="o_row">
                                    <field name="channel_weight" placeholder="Weight in kg"/>
                                    <span> kg</span>
                                </div>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="slaughter_line_kanban" model="ir.ui.view">
            <field name="name">Slaughter line kanban</field>
            <field name="model">slaughter.line</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" on_create="quick_create" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div id="slaughter_line" class="o_kanban_record_top mb0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><span><field name="display_name"/></span></strong>
                                    </div>
                                </div>
                                <div/>
                                <div>
                                    <span>Standing weight: <field name="standing_weight"/> kg</span>
                                </div>
                                <div>
                                    <span>Channel weight: <field name="channel_weight"/> kg</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="slaughter_line_search" model="ir.ui.view">
            <field name="name">Slaughter line search</field>
            <field name="model">slaughter.line</field>
            <field name="arch" type="xml">
                <search string="Search Slaughter line">
                    <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                    <field name="name" string="Description" filter_domain="[('name', 'ilike', self)]"/>
                    <filter string="Active" help="Active record" name="active" domain="[('active', '=', 'true')]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Code" name="code" domain="[]" context="{'group_by': 'code'}"/>
                        <filter string="Name" name="name" domain="[]" context="{'group_by': 'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="slaughter_line_action" model="ir.actions.act_window">
            <field name="name">Slaughter lines</field>
            <field name="res_model">slaughter.line</field>
            <field name="view_mode">tree,form,kanban,search</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new slaughter line
                </p>
            </field>
        </record>

        <menuitem id="slaughter_line" action="slaughter_line_action" name="Slaughter and cutting lines"
                  parent="slaughterhouse_slaughter" sequence="5"/>
    </data>
</odoo>