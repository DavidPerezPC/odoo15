<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="aproval_status" model="ir.ui.view">
            <field name="name">aproval.status.budget</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="x_approval_status" invisible="1"/>
                    <field name="x_approval_status_store" optional="show"/>
                    <field name="user_approvar" invisible="1"/>
                     <field name="user_approvar_store" optional="show"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>