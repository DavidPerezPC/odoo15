<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="slaughterhouse_relationship_tree">
            <field name="name">Relationship list</field>
            <field name="model">slaughter.relationship</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="type_register" optional="show"/>
                    <field name="by_product_type" optional="show"/>
                    <field name="specie_id" optional="show"/>
                    <field name="location_id" optional="show"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_relationship_form">
            <field name="name">Relationship form</field>
            <field name="model">slaughter.relationship</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="type_register" widget="radio" attrs="{'required': 1 }"/>
                        </group>
                        <group>
                            <group style="float:left;">
                                <field name="by_product_type" attrs="{'required': 1 }" options="{'no_create':True}"/>
                                <field name="specie_id" attrs="{'required': 1 }" options="{'no_create':True}"/>
                            </group>
                            <group style="float:right;">
                                <field name="partner_id" attrs="{'required': 1 }"
                                       domain="[('category_id.name', '=', 'Introductor')]"
                                       options="{'no_create':True}"
                                       placeholder="Introducer's name and number"/>
                                <field name="location_id" attrs="{'required': 1 }" options="{'no_create':True}"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="slaughterhouse_relationship_kanban">
            <field name="name">Relationship Kanban</field>
            <field name="model">slaughter.relationship</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <field name="partner_id"/>
                                                <field name="active" invisible="1"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span>
                                                <strong>By product type:&#160;</strong>
                                                <field name="by_product_type"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                <strong>Location:&#160;</strong>
                                                <field name="location_id"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="slaughterhouse_relationship_kanban_search">
            <field name="name">Relationship search</field>
            <field name="model">slaughter.relationship</field>
            <field name="arch" type="xml">
                <search string="Records">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="partner_id"/>
                    <field name="type_register"/>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="relationship_action">
            <field name="name">Relationship Table</field>
            <field name="res_model">slaughter.relationship</field>
            <field name="view_mode">tree,form,search,kanban</field>
        </record>

        <!-- Top menu item -->

        <!-- menu categories -->
        <menuitem id="slaughterhouse_relationship" name="Location/by-product/introducer relationship"
                  parent="slaughterhouse.slaughterhouse_slaughter"
                  action="relationship_action" sequence="8"/>
    </data>
</odoo>