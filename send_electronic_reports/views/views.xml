<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="send_electronic_reports_tree">
            <field name="name">Envio de informes</field>
            <field name="model">send.electronic.reports</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="send_electronic_reports_form" model="ir.ui.view">
            <field name="name">Envio de documentos no timbrados</field>
            <field name="model">send.electronic.reports</field>
            <field name="arch" type="xml">
                <form string="Envio de informes">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="template_id"/>
                            <field name="company_id"/>
                            <field name="move_type"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="send_electronic_reports_action_window">
            <field name="name">Envio de documentos no timbrados</field>
            <field name="res_model">send.electronic.reports</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="EnvÃ­o de documentos no timbrados" id="send_electronic_reports_menu"
                  parent="base.menu_email"
                  action="send_electronic_reports_action_window"/>

    </data>
</odoo>